<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ipramodsinghrawat.it.androidwearalpha">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/alpha_logo_sml"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2" />
        <activity
            android:name=".AccelerometerActivity"
            android:label="@string/title_activity_accelerometer" />
        <activity
            android:name=".AmbientTemperatureActivity"
            android:label="@string/title_activity_ambient_temperature" />
        <activity
            android:name=".GravityActivity"
            android:label="@string/title_activity_gravity" />
        <activity
            android:name=".OrientationActivity"
            android:label="@string/title_activity_orientation" />
        <activity
            android:name=".MagneticFieldActivity"
            android:label="@string/title_activity_magnetic_field" />
        <activity
            android:name=".GyroscopeActivity"
            android:label="@string/title_activity_gyroscope" />
        <activity
            android:name=".LightActivity"
            android:label="@string/title_activity_light" />
        <activity
            android:name=".LinearAccelerationActivity"
            android:label="@string/title_activity_linear_acceleration" />
        <activity
            android:name=".PressureActivity"
            android:label="@string/title_activity_pressure" />
        <activity
            android:name=".ProximityActivity"
            android:label="@string/title_activity_proximity" />
        <activity
            android:name=".RelativeHumidityActivity"
            android:label="@string/title_activity_relative_humidity" />
        <activity
            android:name=".RotationVectorActivity"
            android:label="@string/title_activity_rotation_vector" />
        <activity
            android:name=".MagneticFieldUncalibratedActivity"
            android:label="@string/title_activity_magnetic_field_uncalibrated" />
        <activity
            android:name=".GyroscopeUncalibratedActivity"
            android:label="@string/title_activity_gyroscope_uncalibrated" />
        <activity
            android:name=".StepCounterActivity"
            android:label="@string/title_activity_step_counter" />
        <activity
            android:name=".GameRotationVectorActivity"
            android:label="@string/title_activity_game_rotation_vector" />
        <activity
            android:name=".SignificantMotionActivity"
            android:label="@string/title_activity_significant_motion"></activity>
    </application>

</manifest>